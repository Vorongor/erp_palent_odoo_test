<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Створюю список існуючи оренд книг -->
    <record id="view_library_rent_tree" model="ir.ui.view">
        <field name="name">library.rent.list</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <list decoration-info="not return_date">
                <field name="book_id"/>
                <field name="partner_id"/>
                <field name="rent_date"/>
                <field name="return_date"/>
            </list>
        </field>
    </record>
    <!-- Створюю форму для додавання нової оренди книги -->
    <record id="view_library_rent_form" model="ir.ui.view">
        <field name="name">library.rent.form</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="partner_id"/>
                        <field name="rent_date"/>
                        <field name="return_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Додаю кнопку для створення оренди на панель -->
    <record id="action_library_rent" model="ir.actions.act_window">
        <field name="name">Rent</field>
        <field name="res_model">library.rent</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Додаю посилання з розділом оренд на панель -->
    <menuitem id="menu_library_rent" name="Rent" parent="menu_library_root"
              action="action_library_rent" sequence="20"/>

    <!-- Додаю кнопку для створення клієнта на панель -->
    <record id="action_library_partner" model="ir.actions.act_window">
        <field name="name">Client</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Додаю посилання з розділом клієнтів (вбудовані partners) на панель -->
    <menuitem id="menu_library_partner" name="Clients"
              parent="menu_library_root"
              action="action_library_partner" sequence="30"/>

</odoo>